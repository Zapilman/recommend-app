{
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["./dist/"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true
  }
}
